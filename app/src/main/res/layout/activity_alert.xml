    <Button
        android:id="@+id/button_friends"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/button_profile"
        android:background="#e3e2ea"
        android:padding="3dp"
        android:text="@string/nav_friends" />

    <Button
        android:id="@+id/button_shelter"
